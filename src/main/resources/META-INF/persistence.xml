<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
<persistence-unit name="schulplaner" transaction-type="RESOURCE_LOCAL">
    <class>com.applicationswp.data.Appointment</class>
    <class>com.applicationswp.data.Member</class>
    <class>com.applicationswp.data.Task</class>
    <class>com.applicationswp.data.Course</class>
    <class>com.applicationswp.data.MemberRole</class>
    <class>com.applicationswp.data.Substitution</class>
    <class>com.applicationswp.data.File</class>
    <class>com.applicationswp.data.AppointmentType</class>
    <class>com.applicationswp.data.Evaluation</class>
    <class>com.applicationswp.data.ExcuseNote</class>
    <class>com.applicationswp.data.Announcement</class>
    <class>com.applicationswp.data.Message</class>
    <class>com.applicationswp.data.EditablePage</class>
    <class>com.applicationswp.data.LehrEvaluation</class>
    <class>com.applicationswp.data.TimeTable</class>
    <class>com.applicationswp.data.RegisterCredit</class>


    <properties>
        <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
        <property name="javax.persistence.jdbc.url"
                  value="jdbc:derby://localhost:1527/SchulplanerDB;create=true" />
        <property name="javax.persistence.jdbc.user" value="admin" />
        <property name="javax.persistence.jdbc.password" value="admin" />

        <!-- EclipseLink should create the database schema automatically -->
        <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
        <property name="eclipselink.ddl-generation.output-mode" value="database" />
    </properties>

</persistence-unit>

</persistence>
